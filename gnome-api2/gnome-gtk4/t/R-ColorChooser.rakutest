      isa-ok $_native-object, Gnome::Gtk4::ColorChooser;
      $!signal-processed = True;
    }

    method signal-emitter ( Gnome::Gtk4::ColorChooser :$_widget --> Str ) {

      while $main.gtk-events-pending() { $main.iteration-do(False); }

      $_widget.emit-by-name(
        'signal',
