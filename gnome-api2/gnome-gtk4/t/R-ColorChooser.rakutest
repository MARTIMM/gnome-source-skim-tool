    my gint $colors-per-line;
    my gint $n-colors;
    my N-RGBA  $color;
    my gboolean $use-alpha;
    my GtkOrientation $orientation;


#`{{
    #TM:0:add-palette()
    ok .add-palette( $orientation, $colors-per-line, $n-colors, $colors), '.add-palette()';

    #TM:0:set-rgba()
    $color = '…';
    .set-rgba( $color);
    #TM:0:get-rgba()
    is .get-rgba(),  $color, '.set-rgba() / .get-rgba()';

    #TM:0:set-use-alpha()
