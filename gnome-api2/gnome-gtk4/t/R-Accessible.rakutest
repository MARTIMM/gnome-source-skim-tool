    #TM:0:get-first-accessible-child()
     .get-first-accessible-child(), '…', '.get-first-accessible-child()';

    #TM:0:get-next-accessible-sibling()
     .get-next-accessible-sibling(), '…', '.get-next-accessible-sibling()';

    #TM:0:get-platform-state()
    is .get-platform-state( $state), '…', '.get-platform-state()';

    #TM:0:reset-property()
    ok .reset-property( $property), '.reset-property()';

    #TM:0:reset-relation()
    ok .reset-relation( $relation), '.reset-relation()';

    #TM:0:reset-state()
    ok .reset-state( $state), '.reset-state()';

    #TM:0:set-accessible-parent()
    $parent = …;
    $next-sibling = …;
    .set-accessible-parent( $parent, $next-sibling);
    #TM:0:get-accessible-parent()
    is .get-accessible-parent(),  $parent, $next-sibling, '.set-accessible-parent() / .get-accessible-parent()';

    #TM:0:update-next-accessible-sibling()
    ok .update-next-accessible-sibling( $new-sibling), '.update-next-accessible-sibling()';

