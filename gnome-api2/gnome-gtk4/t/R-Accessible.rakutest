subtest 'Method tests', {
  with $r-accessible {
    my gint $n-states;
    my GtkAccessibleState $first-state;
    my N-Object $parent;
    my GtkAccessibleRelation $relations;
    my GtkAccessibleState $states;
    my GtkAccessibleProperty $first-property;
    my gint-ptr $x;
    my N-Object $values;
    my gint-ptr $width;
    my Str $message;
    my GtkAccessibleRelation $relation;
    my N-Object $next-sibling;
    my N-Object $new-sibling;
    my GtkAccessibleProperty $property;
    my gint-ptr $height;
    my GtkAccessibleRelation $first-relation;
    my gint $n-relations;
    my GtkAccessibleProperty $properties;
    my GtkAccessibleAnnouncementPriority $priority;
    my gint-ptr $y;
    my gint $n-properties;
    my GtkAccessibleState $state;


#`{{
    #TM:0:announce()
    ok .announce( $message, $priority), '.announce()';

    #TM:0:get-accessible-role()
     .get-accessible-role(), '…', '.get-accessible-role()';

    #TM:0:get-at-context()
     .get-at-context(), '…', '.get-at-context()';

    #TM:0:get-bounds()
